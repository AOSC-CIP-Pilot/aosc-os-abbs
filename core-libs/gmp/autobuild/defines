PKGNAME=gmp
PKGSEC=libs
PKGDEP="glibc texinfo"
PKGDES="GNU Multiprecision library"

# Build C++ and static libraries as well.
AUTOTOOLS_AFTER="--enable-cxx \
                 --enable-static"
# FIXME: Error: opcode not supported on this processor (mips32r6)
# ... Seems to be using R2 instructions.
AUTOTOOLS_AFTER__MIPS32R6EL=" \
                 ${AUTOTOOLS_AFTER} \
                 --disable-assembly"

NOSTATIC=0
NOSTATIC__RETRO=1
NOSTATIC__ARMV4="${NOSTATIC__RETRO}"
NOSTATIC__ARMV6HF="${NOSTATIC__RETRO}"
NOSTATIC__ARMV7HF="${NOSTATIC__RETRO}"
NOSTATIC__I486="${NOSTATIC__RETRO}"
NOSTATIC__LOONGSON2F="${NOSTATIC__RETRO}"
NOSTATIC__POWERPC="${NOSTATIC__RETRO}"
NOSTATIC__PPC64="${NOSTATIC__RETRO}"

AB_FLAGS_O3=1

PKGEPOCH=1
